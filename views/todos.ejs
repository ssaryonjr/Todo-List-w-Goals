<body>
	<!-- navbar -->
	<nav class="navbar bg-light">
		<div class="container-fluid">
			<a class="navbar-brand">
				<h1>The Note Taker</h1>
			</a>
			<a class="btn btn-primary" href="/logout">Logout</a>
		</div>
	</nav>


	<div class="container my-3">
		<h1>Take your Notes here</h1>
		<div class="card">
			<form action="/todos/createTodo" method='POST'>
				<div class="card-body">
					<h3 class="card-title"> Add a Note </h3>
					<div class="form-group">
						<div class="title-date">
							<label for="text">Title:
								<input type="text" placeholder="Enter Todo Item" name='todoItem'>
							</label>
							<label for="start">Start date:
								<input type="date" id="start" name="userDate">
							</label>
						</div>
						<div class="description">
							<label for="text">Description: </label>

						</div>
						<textarea type="text" name="notes"> </textarea>
					</div>

					<input type="submit" value="Add Note" class="btn btn-primary" id="addBtn">
				</div>

			</form>
		</div>

		<h2>
			<%= user.userName %> has <%= left %> things left to do.
		</h2>

		<div class="card-container">
			<% todos.forEach( el=> { %>
				<div data-id='<%=el._id%>' class='card'>

					<!-- <div class="card-body"> -->
					<div class='card-body <%= el.completed === true ? ' completed' : 'not' %>'>

						<!-- <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %> </span> -->
						<h5 class="card-title">
							<%= el.todo %>
						</h5>
						<span>
							<%= el.completion.toDateString() %>
						</span>
						<p class="card-text">
							<%= el.notes %>
						</p>
						<a href="#" class="btn btn-primary del">Delete</a>

					</div>
				</div>
				<% }) %>
		</div>


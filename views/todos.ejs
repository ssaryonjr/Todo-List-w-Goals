<body>
    <!-- navbar -->
 <nav class="navbar bg-light">
    <div class="container-fluid">
      <a class="navbar-brand"> <h1>The Note Taker</h1>
      </a>
      <a class="btn btn-primary" href="/logout">Logout</a>
    </div>
  </nav>


<div class="container my-3">
<h1>Take your Notes here</h1>
<div class="card">
    <form action="/todos/createTodo" method='POST'>
<div class="card-body">
    <h5 class="card-title"> Add a Note  </h5>
    <div class="form-group">
        <label for="text">Title: </label>
        <input type="text" placeholder="Enter Todo Item" name='todoItem'>
        <label for="start">Start date:</label>
        <input type="date" id="start" name="userDate">
        <label for="text">Description</label>
        <input type="text" name ="notes">
    </div>
   <br>
    <input type="submit"  value="Add Note" class="btn btn-primary" 
        id="addBtn"
        >
  </div>      
 
</form>
</div>

   
 <h1>Todos</h1>
    <ul>
    <% todos.forEach( el => { %>
        
            <li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %> </span>
                <span class='del'> Delete </span>
                <span><%= el.completion.toDateString() %> </span>
                <span><%= el.notes %> </span>
            </li>
    <% }) %>    
    </ul> 

    <h2><%= user.userName %> has <%= left %> things left to do.</h2>

